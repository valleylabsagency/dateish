{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["es2020"],           // no DOM types
    "skipLibCheck": true,        // ignore node_modules type mismatches
    "types": ["node"]            // only pull in node typings
  },
  "include": ["src"]
}
